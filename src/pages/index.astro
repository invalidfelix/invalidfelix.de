                <Experience name="Node.js" href="https://nodejs.org/" icon="https://cdn.simpleicons.org/nodedotjs/339933"/>
                <Experience name="Git" href="https://git-scm.com/" icon="https://cdn.simpleicons.org/git/F05032"/>
                <Experience name="React" href="https://react.dev/" icon="https://cdn.simpleicons.org/react/61DAFB"/>
            </div>
        </section>

        <section class="content-section fade-in delay-4" id="projects">
            <div class="section-header">
                <h2>üöÄ Projekt</h2>
                <p class="section-subtitle">Einige der Projekte, an denen ich derzeit arbeite</p>
            </div>
            <div class="project-group">
                <Project title="Quantum-Bot" href="https://quantum-bot.net" desc="Ein Discord-Bot, der viele Features f√ºr deinen Server bietet." gradient_start='#3200dc' gradient_end="#13151A" icon="/quantumbot.png"/>
            </div>
